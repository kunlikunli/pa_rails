<p id="notice"><%= flash[:notice] %></p>

<h1>Enrollment</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.id %></td>
      <td><%= course.description %></td>
      <td><%= link_to 'Drop', "/drop/#{course.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>


